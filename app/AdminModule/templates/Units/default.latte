{block content}

<div class="col-12">
  <div class="pb-3 pt-3 px-2">
    <h1>{_'units_h1'}</h1>
    <p>{_'units_info_text'}</p>
  </div>

  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>{_'units_table_unit'}</th>
      </tr>
    </thead>
    <tbody>
      <tr n:foreach="$units as $unit">
        <td>{$unit->id}</td>
        <td>{$unit->unit}</td>
      </tr>
    </tbody>
  </table>
</div>